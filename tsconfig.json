{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es2015", "dom"],
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "jsx": "react"
    },
    "exclude": ["node_modules/**"],
    "include": ["src/**/*"]
}
